    <div class="story-body story-body-1">
        <figure id="media-100000004958399" class="media photo lede layout-large-horizontal" data-media-action="modal" itemprop="associatedMedia" itemscope itemid="https://static01.nyt.com/images/2017/02/28/world/28oscars-ticktock-2/28oscars-ticktock-2-master768.jpg" itemtype="http://schema.org/ImageObject" aria-label="media" role="group">
